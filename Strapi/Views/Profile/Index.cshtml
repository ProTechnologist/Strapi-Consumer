
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Strapi.Models.User
<h1>My Profile</h1>


<table class="table table-hover">
    <tr>
        <th>User Name</th>
        <td>@Model.username</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.email</td>
    </tr>
    <tr>
        <th>Provider</th>
        <td>@Model.provider</td>
    </tr>
    <tr>
        <th>Role</th>
        <td>@Model.role.name</td>
    </tr>
    <tr>
        <th>Confirmed</th>
        <td>
            <span class='@(Model.confirmed  ? "text-success": "text-danger")'>
                @(Model.confirmed ? "Yes" : "No")
            </span>
        </td>
    </tr>
    <tr>
        <th>Blocked</th>
        <td>
            <span class='@(Model.blocked  ? "text-danger": "text-success")'>
                @(Model.blocked ? "Yes" : "No")
            </span>
        </td>

    </tr>
</table>

